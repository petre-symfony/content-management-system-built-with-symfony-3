{% extends 'admin/base.html.twig' %}

{% block body %}
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Author</th>
        <th>Title</th>
        <th>Category</th>
        <th>Status</th>
        <th>Image</th>
        <th>Tags</th>
        <th>Comments</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      {% for post in posts %}
        <tr>
          <td>{{ post.postAuthor }}</td>
          <td>{{ post.postTitle }}</td>
          <td>{{ post.getPostCategoryName() }}</td>
          <td>{{ post.postStatus }}</td>
          <td><img src="{{ asset('images/' ~ post.postImage) }}" alt="" class="img-responsive" /></td>
          <td>{{ post.getPostTagsName() }}</td>
          <td></td>
          <td>{{ post.postDate|date("F jS \\a\\t g:ia") }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}  